{#plantilla de nuestra aplicacion#}
{%extends 'base.html.twig' %}
{# {% form_theme form 'form/tapaForm.html.twig' %} #}
{%block title%}
Reservas
{%endblock%}

{% block body %}
    <div class="container">
        
    <div class="row">

        <div class="col-md-8">
            <h2>Reservas</h2>
            <table class="table ">
             <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Fecha</th>
            <th scope="col">Num Comensales</th>
            <th scope="col">Observaciones</th>
              <th scope="col">Borrar</th>
            </tr>
             </thead>
          <tbody>
            
            {% for reserva in reservas %}
            <tr>
             {# <th scope="row"><a href="{{path('nuevaReserva',{'id':reserva.id})}}"><i class="fas fa-pencil-alt"></i></a></th> #}
                <th scope="row"><a href="{{path('nuevaReserva',{'id':reserva.id}) }}"><i class="fas fa-edit"></i></a></th>
                <td>{{reserva.fecha|date('Y/m/d h:i')}}</td>
                <td>{{reserva.comensales}}</td>
                <td>{{reserva.observaciones}}</td>
                 <th scope="row"><a href="#" onclick="return controlBorrado('{{path('borrarReserva',{'id':reserva.id}) }} ','{{reserva.fecha|date('Y/m/d h:i')}}');"><i class="fas fa-trash-alt"></i></a></th>
            </tr>
            {% endfor %}

            </tbody>
            </table>


        </div>
        
        <div class="col-md-4">
        <a class="btn btn-primary mt-5" href="{{path('nuevaReserva')}}" ><strong>Nueva reserva</strong> </a>
        </div>
    
    </div>  
    </div>

{% endblock %}
{% block javascripts %}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="{{asset('js/controlBorrado.js')}}"></script>
{% endblock %}
